// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id Int @id @default(autoincrement())
  firstName String
  lastName String
  userName String
  email String @unique
  vehicles Vehicle[]
  @@map("users")
}

model Vehicle {
  id Int @id @default(autoincrement())
  make String
  model String
  year Int
  mileage Int
  owner User @relation(fields: [ownerId], references: [id])
  ownerId Int
  @@map("vehicles")
}